{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "1.0",

    "default_locale": "en",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "16": "icons/heartbeat16.png",
        "48": "icons/heartbeat48.png",
        "128": "icons/heartbeat128.png"
    },

    "browser_action": {
        "default_title": "Health Extension",
        "default_icon": {
            "19": "icons/heartbeatRed19.png",
            "38": "icons/heartbeatRed38.png"
          }
    },

    "author": ["Mathieu Roy", "Benjamin Roy", "Nicolas Mongrain-Lacombe", "Catherine Inglis-Groulx", "Mickael Lambert"],
    "background": {
    	"scripts": [
            "lib/sun.js"
            ,"lib/jquery-3.1.1.min.js"
    		,"common/constants.js"
            ,"helper.js"
            ,"settings/settings.background.js"
    		,"redshift/redshift.background.js"
    		,"tracker/time.js"
            ,"tracker/trackers.js"
    		,"notification/notification.js"
    		,"background.js"
        ]
    },
	"content_scripts": [
		{
			"matches": [
				"http://*/*"
				,"https://*/*"
			],
			"css": [
				"redshift/redshift.css"
			],
			"js": [
				"lib/jquery-3.1.1.min.js"
				,"common/constants.js"
				,"redshift/redshift.content.js"
			],
			"run_at": "document_start"
		}
	],


    "options_ui": {
        "page": "settings/settings.html",
        "chrome_style": false,
        "open_in_tab": true
    },

    "permissions": [
        "tabs"
        ,"storage"
        ,"geolocation"
        ,"<all_urls>"
        ,"notifications"
        ,"contextMenus"
    ],
    "short_name": "__MSG_extensionShortName__"
}
