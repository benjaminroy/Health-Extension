{
  "manifest_version": 2,

  "name": "Health Extension",
  "description": "An extension to remind healthy habits at the computer",
  "version": "1.1",

  "browser_action": {
    "default_icon": "heartbeat.png",
    "default_popup": "popup.html",
    "default_title": "Health Extension"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
