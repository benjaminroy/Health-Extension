{
  "manifest_version": 3,
  "name": "Health Extension",
  "description": "An extension to remind healthy habits at the computer",
  "version": "1.0",

  "icons": { "16": "heartbeat16.png",
             "48": "heartbeat48.png",
            "128": "heartbeat128.png" },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Health Extension"
  },

  "options_ui": {
      "page": "settings/settings.html",
      "chrome_style": false,
      "open_in_tab": true
  },

  "permissions": [
    "tabs",
    "storage",
		"geolocation",
		"<all_urls>",
		"notifications"
  ],

  "background": {
		"scripts": [
			"lib/sun.js",
			"common/constants.js",
			"redshift/redshift.background.js",
			"time.js",
			"notification/notification.js",
			"background.js"
		]
  },

	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"css": [
				"redshift/redshift.css"
			],
			"js": [
				"lib/jquery-3.1.1.min.js",
				"common/constants.js",
				"redshift/redshift.content.js"
			],
			"run_at": "document_end"
		}
	]

}
